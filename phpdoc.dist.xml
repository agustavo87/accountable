<?xml version="1.0" encoding="UTF-8" ?>
<phpdocumentor
        configVersion="3"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="https://www.phpdoc.org"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/phpDocumentor/phpDocumentor/master/data/xsd/phpdoc.xsd"
>
    <title>Accountable</title>
    <paths>
        <output>docs/build</output>
        <cache>docs/cache</cache>
    </paths>
    <version number="latest">
        <api format="php">
            <source dsn=".">
                <path>app</path>
                <path>database</path>
                <!-- <path>vendor/laravel/framework/src</path> -->
            </source>
            <ignore hidden="true" symlinks="true">
                <path>tests/**/*</path>
            </ignore>
            <extensions>
                <extension>php</extension>
            </extensions>
            <default-package-name>Accountable</default-package-name>
        </api>
    </version>
    <setting name="template.color" value="deep-purple" />
    <setting name="graphs.enabled" value="true" />
</phpdocumentor>